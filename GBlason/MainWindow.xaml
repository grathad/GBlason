<ribbon:RibbonWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
                     xmlns:Aggregate="clr-namespace:GBlason.Control.Aggregate" x:Class="GBlason.MainWindow"
                     Icon="Pictures/Icons16/shield.png"
                     Title="GBlason"
                     mc:Ignorable="d"
                     d:DesignHeight="480" d:DesignWidth="760"
                     x:Name="RibbonWindow"
                     MinWidth="310" MinHeight="260"
                     DataContext="{Binding}">
    <ribbon:RibbonWindow.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </ribbon:RibbonWindow.Resources>
    <DockPanel x:Name="LayoutRoot">
        <Aggregate:MainRibbon DockPanel.Dock="Top"/>
        <StatusBar DockPanel.Dock="Bottom" x:Name="StatusBar" MinHeight="20">


        </StatusBar>
        <Aggregate:CustomGUI x:Name="MainFrame"/>
    </DockPanel>
</ribbon:RibbonWindow>
